<phpunit bootstrap="bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="ContentFinderBundle">
            <directory>Test</directory>
        </testsuite>
    </testsuites>
    <filter>
        <blacklist>
            <directory>../../tests</directory>
        </blacklist>
        <whitelist>
            <directory>../../src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="codeCoverageLog" charset="UTF-8" highlight="true"/>
    </logging>
</phpunit>
